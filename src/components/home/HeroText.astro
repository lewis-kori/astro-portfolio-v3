---
import { getCollection } from 'astro:content';
import { SocialLink } from '../shared';
import { ArrowIcon } from '../ui/icons';
import { siteConfig } from '@/config';

const socials = await getCollection('socials');
---

<div class='space-y-4 animate-slide-in-left max-w-2xl'>
  <p class='text-lg text-muted-foreground font-light tracking-wide'>
    Hi, my name is
  </p>

  <h1 class='text-5xl font-semibold leading-tight first-letter-color'>
    <span class='text-foreground'>Lewis Kori.</span>
  </h1>

  <h2
    class='text-3xl font-medium bg-linear-to-r from-primary via-secondary to-primary bg-clip-text text-transparent leading-tight'
  >
    {siteConfig.tagline}
  </h2>

  <p class='text-lg text-muted-foreground leading-relaxed'>
    {siteConfig.authorDescription}
  </p>

  <div class='flex gap-4 pt-4 animate-stagger'>
    {socials.map((social) => <SocialLink {...social.data} />)}
  </div>

  <div class='pt-4 flex flex-col md:flex-row gap-y-2 gap-x-4'>
    <a
      href='#projects'
      class='inline-flex items-center gap-3 px-5 text-sm py-2.5 bg-secondary text-primary-foreground rounded-md hover:bg-primary/90 transition-all hover:scale-105 shadow-lg hover:shadow-xl font-medium'
    >
      Explore My Work
      <ArrowIcon class='w-4 h-4' />
    </a>

    <a
      href='/#blogs'
      class='inline-flex items-center gap-3 px-5 text-sm py-2.5 border border-secondary text-secondary rounded-md hover:bg-secondary hover:text-primary-foreground transition-all hover:scale-105 font-medium'
    >
      Read the Newsletter
    </a>
  </div>
</div>
