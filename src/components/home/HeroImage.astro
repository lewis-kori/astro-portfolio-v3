---
import { siteConfig } from '@/config';
---

<div class='flex justify-center md:justify-end animate-slide-in-right'>
  <div class='relative group'>
    <div
      class='absolute -inset-4 bg-linear-to-r from-primary/30 via-accent/30 to-primary/30 rounded-full blur-2xl opacity-75 group-hover:opacity-100 transition-opacity'
    >
    </div>

    <div
      class='relative w-80 h-80 rounded-full overflow-hidden border-4 border-border shadow-2xl group-hover:scale-105 transition-transform duration-500'
    >
      <img
        src={siteConfig.avatar}
        alt={siteConfig.name}
        width='640'
        height='640'
        loading='eager'
        fetchpriority='high'
        class='w-full h-full object-cover'
      />
    </div>

    <div
      class='absolute inset-0 rounded-full border-2 border-primary/20 animate-ping-slow'
    >
    </div>
  </div>
</div>

<style>
  @keyframes ping-slow {
    75%,
    100% {
      transform: scale(1.1);
      opacity: 0;
    }
  }

  .animate-ping-slow {
    animation: ping-slow 3s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
</style>
