---
import { getCollection } from 'astro:content';
import SocialLink from '../SocialLink.astro';

const socials = await getCollection('socials');
---

<div class='space-y-4 animate-slide-in-left'>
  <p class='text-lg text-muted-foreground font-light tracking-wide'>
    Hi, my name is
  </p>

  <h1 class='text-5xl font-semibold leading-tight first-letter-color'>
    <span class='text-foreground'>Lewis Kori.</span>
  </h1>

  <h2
    class='text-3xl font-medium bg-linear-to-r from-primary via-secondary to-primary bg-clip-text text-transparent leading-tight'
  >
    Turning ideas into scalable web solutions
  </h2>

  <p class='text-lg text-muted-foreground leading-relaxed'>
    I'm a software engineer specializing in <span
      class='text-primary font-medium'>SaaS applications</span
    > and <span class='text-primary font-medium'>MVP development</span> for non-technical
    founders, indiehackers and startups.
  </p>

  <div class='flex gap-4 pt-4 animate-stagger'>
    {socials.map((social) => <SocialLink {...social.data} />)}
  </div>

  <div class='pt-4 flex gap-4'>
    <a
      href='#projects'
      class='inline-flex items-center gap-3 px-8 py-4 bg-secondary text-primary-foreground rounded-md hover:bg-primary/90 transition-all hover:scale-105 shadow-lg hover:shadow-xl font-medium'
    >
      View My Work
      <svg
        class='w-5 h-5'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='M17 8l4 4m0 0l-4 4m4-4H3'></path>
      </svg>
    </a>

    <a
      href='#contact'
      class='inline-flex items-center gap-3 px-8 py-4 border-2 border-secondary text-secondary rounded-md hover:bg-secondary hover:text-primary-foreground transition-all hover:scale-105 font-medium'
    >
      Get In Touch
    </a>
  </div>
</div>
