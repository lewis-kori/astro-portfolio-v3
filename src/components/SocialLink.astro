---
interface Props {
  name: string;
  url: string;
  icon: string;
  ariaLabel: string;
}

const { name, url, icon, ariaLabel } = Astro.props;
---

<a
  href={url}
  target={name !== 'email' ? '_blank' : undefined}
  rel={name !== 'email' ? 'noopener noreferrer' : undefined}
  class='p-3 rounded-full bg-card border border-border hover:bg-accent hover:scale-110 transition-all shadow-sm hover:shadow-md'
  aria-label={ariaLabel}
>
  {
    icon === 'stroke' ? (
      <svg
        class='w-6 h-6'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
        />
      </svg>
    ) : (
      <svg class='w-6 h-6' fill='currentColor' viewBox='0 0 24 24'>
        <path d={icon} />
      </svg>
    )
  }
</a>
