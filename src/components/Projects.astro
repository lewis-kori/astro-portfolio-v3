---
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
// Filter only featured projects and sort by year (descending)
const projects = allProjects
  .filter((p) => p.data.featured === true)
  .sort((a, b) => b.data.year - a.data.year);

// Get project body content for modal
const projectsWithContent = await Promise.all(
  projects.map(async (project) => {
    const { Content } = await project.render();
    return { project, Content };
  }),
);
---

<section class='py-20 relative' id='projects'>
  <div class='container-fluid'>
    <div>
      <h2
        class='text-4xl font-semibold text-foreground mb-3 text-center first-letter-color'
      >
        Featured Projects
      </h2>
      <p class='text-center text-muted-foreground text-lg mb-3'>
        A selection of my recent work
      </p>
      <div
        class='h-1 w-20 bg-linear-to-r from-primary to-secondary rounded-full mx-auto mb-16'
      >
      </div>
    </div>

    <!-- Masonry Grid -->
    <div
      class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 auto-rows-[300px]'
    >
      {
        projectsWithContent.map(({ project }, index) => {
          // Define grid spans for masonry effect
          const getGridClass = (i: number) => {
            const patterns = [
              'md:col-span-2 md:row-span-2', // First: large featured
              'md:col-span-1 md:row-span-1', // Second: regular
              'md:col-span-1 md:row-span-1', // Third: regular
              'md:col-span-1 md:row-span-1', // Fourth: regular
              'md:col-span-2 md:row-span-1', // Fifth: wide
              'md:col-span-1 md:row-span-1', // Sixth: regular
              'md:col-span-2 md:row-span-2', // Seventh: large
              'md:col-span-1 md:row-span-1', // Eighth: regular
            ];
            return patterns[i % patterns.length];
          };

          return (
            <article
              class={`group relative overflow-hidden rounded-xl border border-border/50 bg-card hover:border-primary/30 transition-all duration-500 hover:shadow-xl hover:shadow-primary/5 cursor-pointer animate-blur-fade ${getGridClass(index)}`}
              style={`animation-delay: ${index * 0.1}s`}
              data-project-id={project.id}
            >
              {project.data.cover_image ? (
                <div class='absolute inset-0 overflow-hidden'>
                  <img
                    src={project.data.cover_image}
                    alt={project.data.title}
                    class='w-full h-full object-cover group-hover:scale-110 transition-transform duration-700'
                    loading='lazy'
                  />
                  <div class='absolute inset-0 bg-linear-to-t from-black/90 via-black/70 to-black/20' />
                </div>
              ) : (
                <div class='absolute inset-0 overflow-hidden bg-linear-to-br from-primary/20 to-secondary/20' />
              )}

              <div class='relative h-full flex flex-col justify-end p-6 space-y-4'>
                <h3 class='text-2xl font-bold text-white drop-shadow-[0_2px_8px_rgba(0,0,0,0.8)] group-hover:text-primary-foreground  retro:group-hover:text-primary dark:group-hover:text-primary transition-colors first-letter-color'>
                  {project.data.title}
                </h3>

                <p class='text-white/90 leading-relaxed line-clamp-2 drop-shadow-[0_2px_6px_rgba(0,0,0,0.8)]'>
                  {project.data.made_at && `Made at ${project.data.made_at}`}
                </p>

                <div class='flex flex-wrap gap-2'>
                  {project.data.tech.slice(0, 3).map((tech) => (
                    <span class='px-3 py-1 bg-white/20 text-white rounded-full text-xs font-medium border border-white/30 backdrop-blur-sm'>
                      {tech}
                    </span>
                  ))}
                  {project.data.tech.length > 3 && (
                    <span class='px-3 py-1 bg-white/20 text-white/80 rounded-full text-xs font-medium backdrop-blur-sm'>
                      +{project.data.tech.length - 3}
                    </span>
                  )}
                </div>

                <div class='flex items-center gap-2 text-white font-medium pt-2 drop-shadow-[0_2px_4px_rgba(0,0,0,0.8)]'>
                  <span>View Details</span>
                  <svg
                    class='w-4 h-4 group-hover:translate-x-1 transition-transform'
                    fill='none'
                    viewBox='0 0 24 24'
                    stroke='currentColor'
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      stroke-width='2'
                      d='M17 8l4 4m0 0l-4 4m4-4H3'
                    />
                  </svg>
                </div>
              </div>
            </article>
          );
        })
      }
    </div>

    <!-- View All Projects Link -->
    <div class='text-center mt-10'>
      <a
        href='/projects'
        class='inline-flex items-center gap-2 px-5 text-sm py-2.5 border border-primary text-primary rounded-md font-medium hover:bg-primary hover:text-background transition-all hover:scale-105'
      >
        View All Projects
        <svg
          class='w-5 h-5'
          fill='none'
          viewBox='0 0 24 24'
          stroke='currentColor'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M19 9l-7 7-7-7'></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<!-- Modal -->
<dialog
  id='project-modal'
  class='backdrop:bg-background/80 backdrop:backdrop-blur-sm bg-card border border-border/50 rounded-2xl max-w-3xl w-full p-0 shadow-2xl m-auto'
>
  <div
    class='relative max-h-[90vh] overflow-y-auto project-modal-content pb-8'
    id='modal-content'
  >
    <!-- Content will be injected here -->
  </div>
</dialog>

<script
  define:vars={{
    projectsData: projectsWithContent.map(({ project, Content }) => ({
      id: project.id,
      title: project.data.title,
      tech: project.data.tech,
      cover_image: project.data.cover_image,
      external_link: project.data.external_link,
      github_link: project.data.github_link,
      app_store: project.data.app_store,
      google_play: project.data.google_play,
      made_at: project.data.made_at,
      year: project.data.year,
      body: project.body,
    })),
  }}
>
  function initProjectModals() {
    const projectCards = document.querySelectorAll('[data-project-id]');
    const modal = document.getElementById('project-modal');
    const modalContent = document.getElementById('modal-content');

    if (!modal || !modalContent) return;

    projectCards.forEach((card) => {
      card.addEventListener('click', () => {
        const projectId = card.getAttribute('data-project-id');
        const project = projectsData.find((p) => p.id === projectId);

        if (!project) return;

        // Build modal content
        const linksHtml = `
          <div class="flex flex-wrap gap-3">
            ${
              project.external_link
                ? `
              <a href="${project.external_link}" target="_blank" rel="noopener noreferrer" 
                class="inline-flex items-center gap-2 px-5 text-sm py-2.5 bg-primary text-background rounded-md font-medium hover:bg-primary/90 transition-all">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
                Visit Website
              </a>
            `
                : ''
            }
            ${
              project.github_link
                ? `
              <a href="${project.github_link}" target="_blank" rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-6 py-3 border border-foreground text-foreground rounded-md font-medium hover:bg-foreground hover:text-background transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                GitHub
              </a>
            `
                : ''
            }
            ${
              project.app_store
                ? `
              <a href="${project.app_store}" target="_blank" rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-5 text-sm py-2.5 border border-primary text-primary rounded-md font-medium hover:bg-primary hover:text-background transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
                App Store
              </a>
            `
                : ''
            }
            ${
              project.google_play
                ? `
              <a href="${project.google_play}" target="_blank" rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-5 text-sm py-2.5 border border-secondary text-secondary rounded-md font-medium hover:bg-secondary hover:text-background transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                </svg>
                Play Store
              </a>
            `
                : ''
            }
          </div>
        `;

        modalContent.innerHTML = `
          <button onclick="document.getElementById('project-modal').close()" 
            class="absolute top-4 right-4 z-10 p-2 rounded-full bg-background/80 backdrop-blur-sm border border-border hover:bg-muted transition-colors">
            <svg class="w-6 h-6 text-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>

          ${
            project.cover_image
              ? `<div class="aspect-[16/9] overflow-hidden">
                   <img src="${project.cover_image}" alt="${project.title}" 
                     class="w-full h-full object-cover" />
                 </div>`
              : ''
          }

          <div class="p-8 space-y-6">
            <div>
              <h2 class="text-4xl font-bold text-foreground mb-2">${project.title}</h2>
              ${project.made_at ? `<p class="text-muted-foreground mb-4">Made at ${project.made_at} â€¢ ${project.year}</p>` : ''}
              <div class="text-muted-foreground text-lg leading-relaxed prose prose-lg dark:prose-invert max-w-none">
                ${project.body}
              </div>
            </div>

            <div>
              <h3 class="text-xl font-bold text-foreground mb-3">Tech Stack</h3>
              <div class="flex flex-wrap gap-2">
                ${(project.tech || [])
                  .map(
                    (tech) =>
                      `<span class="px-3.5 py-1.5 bg-primary/10 text-primary rounded-full text-xs font-medium border border-primary/20">${tech}</span>`,
                  )
                  .join('')}
              </div>
            </div>

            ${linksHtml}
          </div>
        `;

        modal.showModal();
      });
    });

    // Close on backdrop click
    modal.addEventListener('click', (e) => {
      const rect = modal.getBoundingClientRect();
      if (
        e.clientX < rect.left ||
        e.clientX > rect.right ||
        e.clientY < rect.top ||
        e.clientY > rect.bottom
      ) {
        modal.close();
      }
    });
  }

  // Initialize on page load
  initProjectModals();

  // Reinitialize after view transitions
  document.addEventListener('astro:page-load', initProjectModals);
</script>

<style>
  dialog::backdrop {
    animation: fade-in 0.3s ease-out;
  }

  dialog[open] {
    animation: scale-fade-in 0.3s ease-out;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes scale-fade-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .project-modal-content {
    scrollbar-width: thin;
    scrollbar-color: oklch(var(--primary)) oklch(var(--muted));
  }

  .project-modal-content::-webkit-scrollbar {
    width: 8px;
  }

  .project-modal-content::-webkit-scrollbar-track {
    background: oklch(var(--muted));
    border-radius: 4px;
  }

  .project-modal-content::-webkit-scrollbar-thumb {
    background: oklch(var(--primary));
    border-radius: 4px;
  }

  .project-modal-content::-webkit-scrollbar-thumb:hover {
    background: oklch(var(--primary) / 0.8);
  }
</style>
