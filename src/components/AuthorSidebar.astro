---
import aboutImage from '@/assets/about-image.webp';
import { siteConfig } from '@/config';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import { SocialLink } from './shared';

const socials = await getCollection('socials');
---

<aside class='lg:col-span-2'>
  <div class='sticky top-24 space-y-6'>
    <div class='space-y-4'>
      <div class='flex items-center gap-4'>
        <Image
          src={aboutImage}
          alt={siteConfig.name}
          width={80}
          height={80}
          class='rounded-full size-16 border-2 border-primary object-cover'
        />
        <div>
          <h3 class='font-semibold text-lg'>{siteConfig.name}</h3>
          <p class='text-sm text-muted-foreground'>
            {siteConfig.tagline}
          </p>
        </div>
      </div>
      <p class='text-sm text-muted-foreground leading-relaxed'>
        {siteConfig.authorDescription}
      </p>

      <div class='flex gap-3 pt-2'>
        {socials.map((social) => <SocialLink {...social.data} />)}
      </div>
    </div>
  </div>
</aside>
