---

<div class='mt-6 flex items-center justify-between'>
  <button
    id='share-modal-trigger'
    class='inline-flex items-center gap-2 px-4 py-2 border border-border rounded-md hover:bg-muted transition-colors'
    aria-label='Share article'
  >
    <svg
      xmlns='http://www.w3.org/2000/svg'
      width='20'
      height='20'
      viewBox='0 0 24 24'
      fill='none'
      stroke='currentColor'
      stroke-width='2'
      stroke-linecap='round'
      stroke-linejoin='round'
      class='group-hover:rotate-12 transition-transform duration-300'
    >
      <polyline points='20 12 20 22 4 22 4 12'></polyline>
      <rect width='20' height='5' x='2' y='7'></rect>
      <line x1='12' x2='12' y1='22' y2='7'></line>
      <path d='M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z'></path>
      <path d='M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z'></path>
    </svg>
    <span class='text-sm font-semibold'>Share full article</span>
  </button>
</div>

<!-- Share Modal -->
<dialog
  id='share-modal'
  class='backdrop:bg-background/80 backdrop:backdrop-blur-sm bg-card border border-border/50 rounded-2xl max-w-md w-full p-3 md:p-6 shadow-2xl m-auto'
>
  <div class='relative'>
    <div class='p-6 space-y-6'>
      <div class='flex items-center justify-between'>
        <div class='flex items-center gap-3'>
          <div class='p-2 bg-primary/10 rounded-md'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='24'
              height='24'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='2'
              stroke-linecap='round'
              stroke-linejoin='round'
              class='text-primary'
            >
              <circle cx='18' cy='5' r='3'></circle>
              <circle cx='6' cy='12' r='3'></circle>
              <circle cx='18' cy='19' r='3'></circle>
              <line x1='8.59' y1='13.51' x2='15.42' y2='17.49'></line>
              <line x1='15.41' y1='6.51' x2='8.59' y2='10.49'></line>
            </svg>
          </div>
          <h3 class='text-xl font-bold text-primary'>Share this article</h3>
        </div>
        <button
          id='close-share-modal'
          class='p-2 rounded-full hover:bg-primary/10 transition-all duration-300 group'
          aria-label='Close modal'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='20'
            height='20'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
            class='text-muted-foreground group-hover:text-primary group-hover:rotate-90 transition-all duration-300'
          >
            <path d='M18 6L6 18'></path>
            <path d='M6 6l12 12'></path>
          </svg>
        </button>
      </div>

      <!-- Copy Link -->
      <div class='space-y-3'>
        <label
          class='text-sm font-semibold text-muted-foreground flex items-center gap-2'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='16'
            height='16'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
            class='text-primary'
          >
            <path
              d='M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71'
            ></path>
            <path
              d='M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71'
            ></path>
          </svg>
          Copy Link
        </label>
        <div class='flex gap-2'>
          <input
            type='text'
            readonly
            value={url}
            id='share-url-input'
            class='flex-1 px-3 py-2.5 text-sm border border-primary/20 text-primary rounded-md bg-transparent focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-transparent transition-all'
          />
          <button
            id='copy-link-btn'
            class='px-5 py-2.5 bg-primary rounded-md hover:shadow-lg text-primary-foreground hover:scale-105 transition-all duration-300 font-semibold text-sm whitespace-nowrap'
          >
            Copy
          </button>
        </div>
        <p
          id='copy-success'
          class='text-xs font-medium text-emerald-600 dark:text-emerald-400 items-center gap-1.5 flex'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='14'
            height='14'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
            <polyline points='20 6 9 17 4 12'></polyline>
          </svg>
          Link copied to clipboard!
        </p>
      </div>

      <!-- Share Options Grid -->
      <div class='space-y-3'>
        <label
          class='text-sm font-semibold text-muted-foreground flex items-center gap-2'
        >
          Share via
        </label>
        <div class='grid grid-cols-2 gap-2.5'>
          {
            shareOptions.map((option) => (
              <a
                href={option.url}
                target='_blank'
                rel='noopener noreferrer'
                class={`group flex items-center gap-3 px-4 py-3 ${option.bgClass} border ${option.borderClass} rounded-md ${option.hoverClass} hover:shadow-lg transition-all duration-300`}
              >
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  width='20'
                  height='20'
                  viewBox='0 0 24 24'
                  fill={option.iconType === 'fill' ? 'currentColor' : 'none'}
                  stroke={
                    option.iconType === 'stroke' ? 'currentColor' : undefined
                  }
                  stroke-width={option.iconType === 'stroke' ? '2' : undefined}
                  stroke-linecap={
                    option.iconType === 'stroke' ? 'round' : undefined
                  }
                  stroke-linejoin={
                    option.iconType === 'stroke' ? 'round' : undefined
                  }
                  class={`${option.iconClass} group-hover:scale-110 transition-transform duration-300`}
                >
                  <path d={option.iconPath} />
                </svg>
                <span class={`text-sm font-semibold ${option.textClass}`}>
                  {option.name}
                </span>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</dialog>

<script>
  function initShareModal() {
    const modal = document.getElementById('share-modal') as HTMLDialogElement;
    const trigger = document.getElementById('share-modal-trigger');
    const closeBtn = document.getElementById('close-share-modal');
    const copyBtn = document.getElementById('copy-link-btn');
    const input = document.getElementById(
      'share-url-input',
    ) as HTMLInputElement;
    const successMsg = document.getElementById('copy-success');
    successMsg?.classList.add('hidden');

    if (!modal || !trigger || !closeBtn || !copyBtn || !input) return;

    trigger.addEventListener('click', () => {
      modal.showModal();
    });

    closeBtn.addEventListener('click', () => {
      modal.close();
    });

    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(input.value);
        successMsg?.classList.remove('hidden');
        copyBtn.textContent = 'Copied!';

        setTimeout(() => {
          successMsg?.classList.add('hidden');
          copyBtn.textContent = 'Copy';
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });

    // Close on backdrop click
    modal.addEventListener('click', (e) => {
      const rect = modal.getBoundingClientRect();
      if (
        e.clientX < rect.left ||
        e.clientX > rect.right ||
        e.clientY < rect.top ||
        e.clientY > rect.bottom
      ) {
        modal.close();
      }
    });
  }

  initShareModal();
  document.addEventListener('astro:page-load', initShareModal);
</script>

<style>
  dialog::backdrop {
    animation: fade-in 0.2s ease-out;
  }

  dialog[open] {
    animation: scale-fade-in 0.2s ease-out;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes scale-fade-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
