---
import { ArrowIcon } from '@/components/ui/icons';
import EmailIcon from '@/components/ui/icons/EmailIcon.astro';
import XIcon from '@/components/ui/icons/XIcon.astro';
import LinkedInIcon from '@/components/ui/icons/LinkedInIcon.astro';
import Layout from '@/layouts/Layout.astro';

const lookingForOptions = [
  { value: 'product-development', label: 'Product Development' },
  { value: 'technical-advisory', label: 'Technical Advisory' },
  { value: 'consulting', label: 'Consulting Services' },
  { value: 'collaboration', label: 'Collaboration' },
  { value: 'speaking', label: 'Speaking Engagement' },
  { value: 'other', label: 'Something Else' },
];

const budgetOptions = [
  { value: 'under-10k', label: 'Under $10k' },
  { value: '10k-50k', label: '$10k - $50k' },
  { value: '50k-100k', label: '$50k - $100k' },
  { value: '100k-plus', label: '$100k+' },
];

const contactMethods = [
  {
    icon: EmailIcon,
    label: 'Email',
    value: 'hello@lewiskori.com',
    href: 'mailto:hello@lewiskori.com',
  },
  {
    icon: XIcon,
    label: 'Twitter',
    value: '@lewiskori',
    href: 'https://twitter.com/lewiskori',
    external: true,
  },
  {
    icon: LinkedInIcon,
    label: 'LinkedIn',
    value: 'lewiskori',
    href: 'https://linkedin.com/in/lewiskori',
    external: true,
  },
];
---

<Layout
  title='Contact | Lewis Kori'
  description='Get in touch with me for consulting, advising, or collaboration opportunities.'
>
  <!-- Calendly Script -->
  <script
    type='text/javascript'
    src='https://assets.calendly.com/assets/external/widget.js'
    async></script>

  <div class='container-fluid py-16 md:py-20'>
    <div class='mb-16 text-center space-y-4'>
      <div class='inline-block'>
        <span
          class='text-xs uppercase tracking-wider text-primary font-semibold px-4 py-2 rounded-full bg-primary/10 border border-primary/20'
        >
          Let's Connect
        </span>
      </div>
      <h1
        class='text-3xl md:text-4xl font-semibold text-foreground leading-tight tracking-tight first-letter-color'
      >
        Start a Conversation
      </h1>
      <p class='text-lg text-muted-foreground max-w-3xl mx-auto'>
        I'm always open to conversations with founders, operators, and
        collaborators working on meaningful problems. If you're building
        something serious and value thoughtful engagement, feel free to reach
        out.
      </p>
    </div>

    <!-- Tabs Navigation -->
    <div class='flex justify-center mb-8'>
      <div
        class='inline-flex gap-2 p-1 rounded-lg bg-secondary/20 border border-border'
      >
        <button
          id='form-tab-btn'
          class='tab-button active px-6 py-3 rounded-md text-sm font-medium transition-all'
        >
          Contact Form
        </button>
        <button
          id='calendly-tab-btn'
          class='tab-button px-6 py-3 rounded-md text-sm font-medium transition-all'
        >
          Schedule a Call
        </button>
      </div>
    </div>

    <div id='form-tab' class='tab-content'>
      <div class='grid lg:grid-cols-5 gap-8'>
        <div class='lg:col-span-3'>
          <form id='contact-form' class='space-y-8 h-full'>
            <div class='grid md:grid-cols-2 gap-6'>
              <div class='flex flex-col gap-2'>
                <label for='name' class='text-sm font-medium text-foreground'>
                  My Name is <span class='text-destructive'>*</span>
                </label>
                <input
                  type='text'
                  id='name'
                  name='name'
                  required
                  placeholder='Your name'
                  class='w-full px-4 py-3 rounded-lg border border-border bg-background focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all placeholder:text-muted-foreground'
                />
              </div>

              <div class='flex flex-col gap-2'>
                <label
                  for='company'
                  class='text-sm font-medium text-foreground'
                >
                  I work at
                </label>
                <input
                  type='text'
                  id='company'
                  name='company'
                  placeholder='Company'
                  class='w-full px-4 py-3 rounded-lg border border-border bg-background focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all placeholder:text-muted-foreground'
                />
              </div>
            </div>

            <div class='flex flex-col gap-2'>
              <label for='email' class='text-sm font-medium text-foreground'>
                My Email is <span class='text-destructive'>*</span>
              </label>
              <input
                type='email'
                id='email'
                name='email'
                required
                placeholder='your.email@example.com'
                class='w-full px-4 py-3 rounded-lg border border-border bg-background focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all placeholder:text-muted-foreground'
              />
            </div>

            <div class='space-y-3'>
              <label class='text-sm font-medium text-foreground block'>
                I'm looking for? <span class='text-destructive'>*</span>
              </label>
              <div class='grid sm:grid-cols-2 gap-3'>
                {
                  lookingForOptions.map((option) => (
                    <label class='flex items-center gap-3 p-4 rounded-lg border border-border bg-background hover:border-primary/50 cursor-pointer transition-all group'>
                      <input
                        type='checkbox'
                        name='looking_for'
                        value={option.value}
                        class='appearance-none w-5 h-5 rounded border-2 border-border bg-background cursor-pointer transition-all checked:bg-primary checked:border-primary relative flex items-center justify-center before:content-[""] before:absolute before:w-2.5 before:h-1.5 before:border-l-2 before:border-b-2 before:border-primary-foreground before:-rotate-45 before:-translate-y-px before:opacity-0 checked:before:opacity-100'
                      />
                      <span class='text-sm text-foreground group-hover:text-primary transition-colors'>
                        {option.label}
                      </span>
                    </label>
                  ))
                }
              </div>
            </div>

            <div class='space-y-3'>
              <label class='text-sm font-medium text-foreground block'>
                My budget range is (Optional)
              </label>
              <div class='grid sm:grid-cols-2 gap-3'>
                {
                  budgetOptions.map((option) => (
                    <label class='flex items-center gap-3 p-4 rounded-lg border border-border bg-background hover:border-primary/50 cursor-pointer transition-all group'>
                      <input
                        type='radio'
                        name='budget'
                        value={option.value}
                        class='appearance-none w-5 h-5 rounded-full border-2 border-border bg-background cursor-pointer transition-all checked:border-primary checked:border-[6px] '
                      />
                      <span class='text-sm text-foreground group-hover:text-primary transition-colors'>
                        {option.label}
                      </span>
                    </label>
                  ))
                }
              </div>
            </div>

            <div class='flex flex-col gap-2'>
              <label for='message' class='text-sm font-medium text-foreground'>
                More details about the project (brief summary, deadline etc) <span
                  class='text-destructive'>*</span
                >
              </label>
              <textarea
                id='message'
                name='message'
                required
                rows='6'
                placeholder='Tell me about your project, goals, or how we might work together...'
                class='w-full px-4 py-3 rounded-lg border border-border bg-background focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all placeholder:text-muted-foreground resize-none'
              ></textarea>
            </div>

            <div
              class='flex items-start gap-3 p-4 rounded-lg border border-border bg-secondary/10'
            >
              <input
                type='checkbox'
                id='subscribe'
                name='subscribe'
                class='appearance-none w-5 h-5 rounded border-2 border-border bg-background cursor-pointer transition-all checked:bg-primary checked:border-primary relative flex items-center justify-center before:content-[""] before:absolute before:w-2.5 before:h-1.5 before:border-l-2 before:border-b-2 before:border-primary-foreground before:-rotate-45 before:-translate-y-px before:opacity-0 checked:before:opacity-100 mt-0.5 shrink-0'
              />
              <label
                for='subscribe'
                class='text-sm text-foreground cursor-pointer'
              >
                <span class='font-medium'>Subscribe to my newsletter</span>
                <p class='text-xs text-muted-foreground mt-1'>
                  Get insights on software engineering, startups, and tech
                  trends delivered to your inbox.
                </p>
              </label>
            </div>

            <div class='flex flex-col sm:flex-row items-center gap-4'>
              <button
                type='submit'
                class='w-full sm:w-auto px-8 py-4 rounded-md text-sm bg-primary text-primary-foreground hover:bg-primary/90 transition-all font-semibold inline-flex items-center justify-center gap-2 group'
              >
                Get in Touch
                <ArrowIcon
                  class='size-4 transition-transform group-hover:-translate-y-1'
                />
              </button>
            </div>
          </form>
        </div>
        <div class='lg:col-span-2'>
          <div class='sticky top-24 space-y-8'>
            <div
              class='rounded-2xl bg-linear-to-br from-primary/10 via-secondary/20 to-primary/5 border border-border p-8 md:p-12 flex items-center justify-center min-h-75'
            >
              <div class='text-center space-y-4'>
                <div
                  class='w-24 h-24 mx-auto rounded-full bg-primary/20 flex items-center justify-center'
                >
                  <svg
                    class='w-12 h-12 text-primary'
                    fill='none'
                    viewBox='0 0 24 24'
                    stroke='currentColor'
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      stroke-width='2'
                      d='M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z'
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class='text-xl font-semibold text-foreground mb-2'>
                    Let's Build Together
                  </h3>
                  <p class='text-sm text-muted-foreground'>
                    I respond to every message personally
                  </p>
                </div>
              </div>
            </div>

            <!-- Alternative Contact Methods -->
            <div class='space-y-4'>
              <p
                class='text-xs uppercase tracking-wider text-muted-foreground font-medium'
              >
                Direct Contact
              </p>

              {
                contactMethods.map((method) => (
                  <a
                    href={method.href}
                    target={method.external ? '_blank' : undefined}
                    rel={method.external ? 'noopener noreferrer' : undefined}
                    class='block p-4 rounded-lg border border-border bg-secondary/10 hover:bg-secondary/20 transition-all group'
                  >
                    <div class='flex items-center gap-4'>
                      <div class='w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center group-hover:scale-110 transition-transform shrink-0'>
                        <method.icon class='w-5 h-5 text-primary' />
                      </div>
                      <div>
                        <h4 class='font-semibold text-foreground text-sm'>
                          {method.label}
                        </h4>
                        <p class='text-xs text-muted-foreground'>
                          {method.value}
                        </p>
                      </div>
                    </div>
                  </a>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id='calendly-tab' class='tab-content hidden'>
      <div class=''>
        <div
          class='calendly-inline-widget overflow-hidden'
          data-url='https://calendly.com/lewiskori/30min?background_color=0c1326&primary_color=47c9a7&text_color=ffffff'
          style='min-width:320px;height:700px;'
        >
        </div>
        <!-- Calendly inline widget end -->
      </div>
    </div>
  </div>
</Layout>

<script>
  function initTabs() {
    const formTabBtn = document.getElementById('form-tab-btn');
    const calendlyTabBtn = document.getElementById('calendly-tab-btn');
    const formTab = document.getElementById('form-tab');
    const calendlyTab = document.getElementById('calendly-tab');

    function switchTab(showForm: boolean) {
      if (showForm) {
        formTabBtn?.classList.add('active');
        calendlyTabBtn?.classList.remove('active');
        formTab?.classList.remove('hidden');
        calendlyTab?.classList.add('hidden');
      } else {
        formTabBtn?.classList.remove('active');
        calendlyTabBtn?.classList.add('active');
        formTab?.classList.add('hidden');
        calendlyTab?.classList.remove('hidden');
      }
    }

    formTabBtn?.addEventListener('click', () => switchTab(true));
    calendlyTabBtn?.addEventListener('click', () => switchTab(false));
  }

  initTabs();
  document.addEventListener('astro:page-load', initTabs);

  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form') as HTMLFormElement;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        company: formData.get('company'),
        email: formData.get('email'),
        looking_for: formData.getAll('looking_for'),
        budget: formData.get('budget'),
        message: formData.get('message'),
      };

      console.log('Form submitted:', data);
      alert("Thanks for reaching out! I'll get back to you soon. ðŸš€");
      form.reset();
    });
  });
</script>

<style>
  .tab-button {
    color: var(--color-muted-foreground);
  }

  .tab-button.active {
    background: var(--color-primary);
    color: var(--color-primary-foreground);
    font-weight: 600;
  }

  .tab-button:not(.active):hover {
    background: var(--color-secondary);
    color: var(--color-foreground);
  }

  .tab-content {
    animation: fadeIn 0.3s ease-in;
  }
  .calendly-inline-widget img,
  embed,
  iframe,
  object,
  video {
    height: 100% !important;
    max-width: 100%;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
