---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');

// Sort by year (descending)
const sortedProjects = allProjects.sort((a, b) => b.data.year - a.data.year);

const years = [...new Set(sortedProjects.map((p) => p.data.year))].sort(
  (a, b) => b - a,
);
---

<Layout
  title='Work – Products and Ventures by Lewis Kori'
  description='An overview of the products, ventures, and platforms Lewis Kori is actively building or advising.'
  ogTitle="What I'm Building"
  ogDescription='Active ventures, product work, and long-term bets focused on trust, discovery, and scalable systems.'
>
  <div class='container-fluid py-8 md:py-16'>
    <div class=''>
      <div
        class='flex flex-col md:flex-row md:items-start md:justify-between gap-6 mb-8'
      >
        <div>
          <h1 class='text-3xl md:text-4xl font-semibold mb-2'>All Projects</h1>
          <p class='text-sm md:text-base'>
            A list Of things I've worked on over the years
          </p>
        </div>

        <div class='shrink-0'>
          <label
            for='year-filter'
            class='text-sm font-semibold mb-3 block text-muted-foreground'
          >
            Filter by Year
          </label>
          <select
            id='year-filter'
            class='px-4 py-2 rounded-md border border-border bg-background hover:bg-muted transition-colors text-sm min-w-37.5 cursor-pointer focus:outline-none focus:ring-2 focus:ring-primary'
          >
            <option value='all'>All Years</option>
            {years.map((year) => <option value={year}>{year}</option>)}
          </select>
        </div>
      </div>

      <div class='overflow-x-auto -mx-4 md:mx-0'>
        <div class='inline-block min-w-full align-middle'>
          <table class='w-full border-collapse'>
            <thead class='bg-muted'>
              <tr>
                <th
                  class='text-left py-3 md:py-4 px-3 md:px-6 font-semibold text-foreground border-b border-border text-sm md:text-base'
                  >Year</th
                >
                <th
                  class='text-left py-3 md:py-4 px-3 md:px-6 font-semibold text-foreground border-b border-border text-sm md:text-base'
                  >Project</th
                >
                <th
                  class='text-left py-3 md:py-4 px-3 md:px-6 font-semibold text-foreground border-b border-border hidden sm:table-cell text-sm md:text-base'
                  >Made At</th
                >
                <th
                  class='text-left py-3 md:py-4 px-3 md:px-6 font-semibold text-foreground border-b border-border hidden lg:table-cell text-sm md:text-base'
                  >Built With</th
                >
                <th
                  class='text-left py-3 md:py-4 px-3 md:px-6 font-semibold text-foreground border-b border-border text-sm md:text-base'
                  >Link</th
                >
              </tr>
            </thead>
            <tbody>
              {
                sortedProjects.map((project) => (
                  <tr
                    class='project-row hover:bg-muted/50 transition-colors border-b border-border last:border-0'
                    data-year={project.data.year}
                  >
                    <td class='py-3 md:py-4 px-3 md:px-6 text-muted-foreground text-sm md:text-base'>
                      {project.data.year}
                    </td>
                    <td class='py-3 md:py-4 px-3 md:px-6 font-medium text-foreground text-sm md:text-base'>
                      {project.data.title}
                    </td>
                    <td class='py-3 md:py-4 px-3 md:px-6 text-muted-foreground hidden sm:table-cell text-sm md:text-base'>
                      {project.data.made_at || '—'}
                    </td>
                    <td class='py-3 md:py-4 px-3 md:px-6 hidden lg:table-cell'>
                      <div class='flex flex-wrap gap-2'>
                        {project.data.tech?.map((tech) => {
                          return (
                            <span class='text-xs px-2 py-1 bg-secondary/20 retro:bg-primary/20 rounded-full text-foreground whitespace-nowrap'>
                              {tech}
                            </span>
                          );
                        })}
                      </div>
                    </td>
                    <td class='py-3 md:py-4 px-3 md:px-6'>
                      <div class='flex gap-2 md:gap-3'>
                        {project.data.external_link && (
                          <a
                            href={project.data.external_link}
                            title='Website'
                            target='_blank'
                            rel='noopener noreferrer'
                            class='text-secondary hover:text-secondary/80 transition-colors'
                            aria-label='Visit website'
                          >
                            <svg
                              class='w-5 h-5'
                              fill='none'
                              viewBox='0 0 24 24'
                              stroke='currentColor'
                            >
                              <path
                                stroke-linecap='round'
                                stroke-linejoin='round'
                                stroke-width='2'
                                d='M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9'
                              />
                            </svg>
                          </a>
                        )}
                        {project.data.github_link && (
                          <a
                            href={project.data.github_link}
                            target='_blank'
                            rel='noopener noreferrer'
                            class='text-secondary hover:text-secondary transition-colors'
                            aria-label='View on GitHub'
                            title='GitHub'
                          >
                            <svg
                              class='w-5 h-5'
                              fill='currentColor'
                              viewBox='0 0 24 24'
                            >
                              <path d='M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z' />
                            </svg>
                          </a>
                        )}
                        {project.data.app_store && (
                          <a
                            href={project.data.app_store}
                            target='_blank'
                            rel='noopener noreferrer'
                            class='text-secondary hover:text-secondary/80 transition-colors'
                            aria-label='View on App Store'
                            title='App Store'
                          >
                            <svg
                              class='w-5 h-5'
                              fill='currentColor'
                              viewBox='0 0 24 24'
                            >
                              <path d='M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z' />
                            </svg>
                          </a>
                        )}
                        {project.data.google_play && (
                          <a
                            href={project.data.google_play}
                            target='_blank'
                            rel='noopener noreferrer'
                            class='text-secondary hover:text-secondary/80 transition-colors'
                            aria-label='View on Play Store'
                            title='Play Store'
                          >
                            <svg
                              class='w-5 h-5'
                              fill='currentColor'
                              viewBox='0 0 24 24'
                            >
                              <path d='M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z' />
                            </svg>
                          </a>
                        )}
                      </div>
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script>
    function initYearFilter() {
      const filterSelect = document.getElementById(
        'year-filter',
      ) as HTMLSelectElement;
      const projectRows = document.querySelectorAll('.project-row');

      if (!filterSelect) return;

      filterSelect.addEventListener('change', () => {
        const year = filterSelect.value;

        projectRows.forEach((row) => {
          const projectYear = row.getAttribute('data-year');
          if (year === 'all' || projectYear === year) {
            (row as HTMLElement).style.display = '';
          } else {
            (row as HTMLElement).style.display = 'none';
          }
        });
      });
    }

    initYearFilter();

    document.addEventListener('astro:page-load', initYearFilter);
  </script>
</Layout>
