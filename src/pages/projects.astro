---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');

// Sort by year (descending)
const sortedProjects = allProjects.sort((a, b) => b.data.year - a.data.year);

// Tech icons mapping
const techIcons: Record<string, string> = {
  'Next.js': 'i-simple-icons-nextdotjs',
  Django: 'i-simple-icons-django',
  'Vue.js': 'i-simple-icons-vuedotjs',
  'React.js': 'i-simple-icons-react',
  'react.js': 'i-simple-icons-react',
  flutter: 'i-simple-icons-flutter',
  Flutter: 'i-simple-icons-flutter',
  Docker: 'i-simple-icons-docker',
  'Tailwind CSS': 'i-simple-icons-tailwindcss',
  Beehiv: 'i-ph-envelope',
  Python: 'i-simple-icons-python',
  TypeScript: 'i-simple-icons-typescript',
  JavaScript: 'i-simple-icons-javascript',
};

const linkIcons = {
  website: 'i-ph-globe',
  appStore: 'i-simple-icons-apple',
  playStore: 'i-simple-icons-googleplay',
};
---

<Layout title='All Projects'>
  <div class='container-fluid py-16'>
    <div class='max-w-6xl mx-auto'>
      <h1 class='text-4xl font-semibold mb-2'>All Projects</h1>
      <p class='mb-8'>A list Of things I've worked on over the years</p>
      <div class='overflow-x-auto'>
        <table class='w-full border-collapse overflow-hidden'>
          <thead class='bg-muted'>
            <tr>
              <th
                class='text-left py-4 px-6 font-semibold text-foreground border-b border-border'
                >Year</th
              >
              <th
                class='text-left py-4 px-6 font-semibold text-foreground border-b border-border'
                >Project</th
              >
              <th
                class='text-left py-4 px-6 font-semibold text-foreground border-b border-border'
                >Made At</th
              >
              <th
                class='text-left py-4 px-6 font-semibold text-foreground border-b border-border'
                >Built With</th
              >
              <th
                class='text-left py-4 px-6 font-semibold text-foreground border-b border-border'
                >Link</th
              >
            </tr>
          </thead>
          <tbody>
            {
              sortedProjects.map((project) => (
                <tr class='hover:bg-muted/50 transition-colors border-b border-border last:border-0'>
                  <td class='py-4 px-6 text-muted-foreground'>
                    {project.data.year}
                  </td>
                  <td class='py-4 px-6 font-medium text-foreground'>
                    {project.data.title}
                  </td>
                  <td class='py-4 px-6 text-muted-foreground'>
                    {project.data.made_at || '—'}
                  </td>
                  <td class='py-4 px-6'>
                    <div class='flex flex-wrap gap-2'>
                      {project.data.tech?.map((tech) => {
                        const iconClass = techIcons[tech];
                        return iconClass ? (
                          <span
                            class={`${iconClass} text-xl text-foreground`}
                            title={tech}
                          />
                        ) : (
                          <span class='text-xs px-2 py-1 bg-secondary rounded-full text-foreground'>
                            {tech}
                          </span>
                        );
                      }) || <span class='text-muted-foreground'>—</span>}
                    </div>
                  </td>
                  <td class='py-4 px-6'>
                    <div class='flex gap-3'>
                      {project.data.external_link && (
                        <a
                          href={project.data.external_link}
                          target='_blank'
                          rel='noopener noreferrer'
                          class='text-secondary hover:text-secondary/80 transition-colors'
                          aria-label='Visit website'
                        >
                          <svg
                            class='w-5 h-5'
                            fill='none'
                            viewBox='0 0 24 24'
                            stroke='currentColor'
                          >
                            <path
                              stroke-linecap='round'
                              stroke-linejoin='round'
                              stroke-width='2'
                              d='M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9'
                            />
                          </svg>
                        </a>
                      )}
                      {project.data.app_store && (
                        <a
                          href={project.data.app_store}
                          target='_blank'
                          rel='noopener noreferrer'
                          class='text-secondary hover:text-secondary/80 transition-colors'
                          aria-label='View on App Store'
                        >
                          <svg
                            class='w-5 h-5'
                            fill='currentColor'
                            viewBox='0 0 24 24'
                          >
                            <path d='M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z' />
                          </svg>
                        </a>
                      )}
                      {project.data.google_play && (
                        <a
                          href={project.data.google_play}
                          target='_blank'
                          rel='noopener noreferrer'
                          class='text-secondary hover:text-secondary/80 transition-colors'
                          aria-label='View on Play Store'
                        >
                          <svg
                            class='w-5 h-5'
                            fill='currentColor'
                            viewBox='0 0 24 24'
                          >
                            <path d='M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z' />
                          </svg>
                        </a>
                      )}
                    </div>
                  </td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</Layout>
